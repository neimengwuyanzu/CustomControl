<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_location"
        android:src="@mipmap/bg_start_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_location"
        android:text="位置位置位置"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/iv_location"
        android:layout_alignTop="@id/iv_location"
        android:layout_alignBottom="@id/iv_location"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_alignStart="@id/iv_location"
        android:id="@+id/iv_name"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_location"
        android:src="@mipmap/bg_start_progress_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="项目名称项目名称"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/iv_name"
        android:layout_alignTop="@id/iv_name"
        android:layout_alignBottom="@id/iv_name"
        android:textColor="@color/black"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>